<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- BaseModel application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/action_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BaseModel application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/action_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Normal_Margin_Style" parent="AppTheme">
        <item name="android:layout_marginRight">@dimen/margin_right_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_16</item>
        <item name="android:layout_marginTop">@dimen/margin_top_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_8</item>
    </style>

    <style name="Font_family_light" parent="AppTheme">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="Font_family_regular" parent="AppTheme">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-regular</item>
    </style>

    //splash
    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.DrugStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
