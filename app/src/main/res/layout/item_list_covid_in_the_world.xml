<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name_in_the_world"
            android:layout_width="@dimen/dimen_64dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_border_right_bottom"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_4dp"
            android:paddingRight="@dimen/dimen_4dp"
            android:text="Hà Nội"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_border_right_bottom">

            <TextView
                android:id="@+id/tv_confirmed_stat_in_the_world"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_4dp"
                android:layout_weight="1"
                android:background="@drawable/border_button_confirmed"
                android:gravity="center"
                android:text="344"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_border_right_bottom">

            <TextView
                android:id="@+id/tv_recovery_stat_in_the_world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_4dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_recovery"
                android:gravity="center"
                android:text="233" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_border_right_bottom">

            <TextView
                android:id="@+id/tv_deaths_stat_in_the_world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_4dp"
                android:layout_weight="1"
                android:background="@drawable/border_button_deaths"
                android:gravity="center"
                android:text="233" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />
</LinearLayout>