<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewItem"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardBackgroundColor="@color/gray_100"
            app:cardCornerRadius="@dimen/_100sdp"
            android:elevation="@dimen/_1sdp"
            android:visibility="visible"
            android:layout_margin="@dimen/_3sdp"
            >
            <ImageView
                android:id="@+id/imgProductUsed"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:src="@drawable/ic_cosmetics"
                />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtNameProductUsed"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lines="2"
        android:text="@string/pharmacy"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative1" />
</androidx.constraintlayout.widget.ConstraintLayout>