<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <size android:width="30dp" android:height="12dp" />
            <solid android:color="@color/color_red" />
            <stroke android:width="1.3dp" android:color="@color/color_red" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item>
        <shape>
            <size android:width="50dp" android:height="12dp" />
            <solid android:color="@color/color_red" />
            <stroke android:width="1.3dp" android:color="@color/color_red" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</selector>